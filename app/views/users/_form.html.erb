<%= simple_form_for @user do |f| %>
    <%= f.input :name, placeholder: "Name" %>
    <%= f.input :email, placeholder: "email@email.com" %>
    <%= f.input :phone_number, placeholder: "333-333-4444" %>
    <%= f.input :password, placeholder: "something memorable" %>
    <%= f.input :password_confirmation, placeholder: "Confirm Password", required: true %>
    <%= f.input :profile_image, as: :file %>
    <%= f.button :submit %>
<% end %>
