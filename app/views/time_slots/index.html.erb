<div class="container">
  <div class="row">
    <h1>All available time slots!</h1>
    <hr>
  </div>
  <div class="row">
    <% @time_slot.each do |t|%>
      <div class="row time slot">
        <div class="col-md-6">
          <h3><%=link_to "#{t.id}", edit_time_slot_path(t)%></h3>
          <p><%= "#{t.week_day}" %></p>
          <p>Location: <%= "#{t.hour}" %></p>
        </div>
      </div>
    <%end%>
  </div>
</div>
