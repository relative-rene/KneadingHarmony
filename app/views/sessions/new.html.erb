<br>

<div class="container">
    <div class="row">
        <h1>Log In</h1>
        <br>
    </div>
    <div class="row">
        <div class="col-md-6">
            <%= simple_form_for @user, url: sessions_path, as: 'user' do |f| %>
            <%= f.input :email, placeholder: "email@email.com"%>
            <%= f.input :password, label: "Password" %>
            <%= f.input :remember_me, inline_label: 'Yes, remember me' %>
            <%= f.button :submit, name:"Login", value:"Login" %>
            <% end %>
        </div>
    </div>
</div>
