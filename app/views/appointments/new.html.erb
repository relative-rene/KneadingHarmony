<hr>
<div class="container">
  <div class="row">
    <h1>Create an Appointment</h1>
  </div>

<!-- ******* User Information Start ******** -->
  <div class="infos">
    <div class="col-xs-12 col-lg-5">
      <%= simple_form_for @appointment, url: create_appointment_path(@user), as:'appointment' do |f| %>
        <%= f.input :time, label:"Time", placeholder: "4:15pm" %>
        <%= f.input :date, label:"Date", placeholder: "mm/dd/yy" %>
        <%= f.input :reason_for_visit, label:"Service Requesting", placeholder: "deep tissue" %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
