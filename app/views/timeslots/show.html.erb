<div class="container timeslot-container">
  <div class="row">
    <div class="col-md-6">
      <div class="group btn-group">
        <% if @user%>
          <div class="inner"><%= button_to "Edit", edit_timeslot_path(@timeslot), :method => "get", class: "btn btn-small btn-success"%></div>
          <div class="inner"><%= button_to "Delete Event", delete_timeslot_path, data: {:confirm=>'Are you sure you want to delete this timeslot?'}, :method => "delete", class: "btn btn-small btn-danger" %></div>
          <div class="inner"><%= button_to "Attend", new_appointment_path(@timeslot), :method => "get", class: "btn btn-small btn-primary" %></div>
        <% else %>
          <%= button_to "Login", login_path, :method => "get", class: "btn btn-small btn-primary" %>
        <% end %>
      </div>
        <h2>What?</h2>
        <p><%= @timeslot.hour%></p>
        <hr>
        <h2>Where?</h2>
        <p><%= @timeslot.week_day%></p>
        <hr>

    </div>

    <div class="col-md-6">
      <h1>Appointments:</h1>
      <hr>
      <% if @user %>
        <% @appointments.each do |appointment|%>
          <% appointmenter = User.find_by_id(appointment.user_id)%>
          <h4><%= appointment_maker.name%>:</h4>
          <p><%= appointment.date %></p>
          <%= link_to '', delete_appointment_path(@timeslot, appointment), data: {:confirm => 'WOOOOW RUDE'}, :method => :delete, class: "glyphicon glyphicon-trash" %>
        <% end %>
      <% else %>
        <h4>Please login to see appointments!</h4>
      <% end %>
      <% if @user %>
        <div class="inner"><%= button_to "Add Appointment", new_appointment_path, :method => "get", class: "btn btn-small btn-primary"%></div>
      <% end %>
    </div>
  </div>
