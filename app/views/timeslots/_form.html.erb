<%= simple_form_for @timeslot do |f| %>
  <%= f.input :week_day, placeholder: "Date", collection: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"]%>
  <%= f.input :hour, placeholder: "Time", collection: ["10am","11:30am", "1:00pm","2:30pm","4:00pm", "5:30pm"]%>
  <%= f.button :submit %>
<% end %>
